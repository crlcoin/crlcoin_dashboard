<div class="col-12 order-2" panel-crlcoin="appTablesConfig">

    <div class="row">

        <div class="col-12">
            <h3>
                Table List
            </h3>
        </div>

        {{#each tablesConfig}}

        <div class="col-md-6 col-xl-3">
            <div class="card-box ribbon-box ">

                <div class="row justify-content-center">
                    <div class="col-12 text-left mb-2 text-center">
                        <h3 class="text-truncate" title="{{name}}">
                            {{name}}
                        </h3>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <h4 class="text-truncate">
                            <span class="h5 text-muted">Used&nbsp;</span>
                            <span class="h4" data-plugin="counterup">
                                {{usedBy}}
                            </span>
                            <span class="h5 text-muted">&nbsp;Times</span>
                        </h4>
                    </div>
                    <div class="col-12">
                        <p class="text-muted text-truncate mb-0">
                            Table Functions:
                            <span>
                                {{#if functions}}
                                {{functions}}
                                {{else}}
                                empty
                                {{/if}}
                            </span>
                        </p>
                    </div>

                    <div class="col-12">
                        <p class="text-muted text-trucate mb-0">
                            Table Columns:
                            <span data-plugin="counterup">
                                {{columnsCount}}
                            </span>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 mt-2 text-right">

                        <button data-href="{{../page.URL}}/f/a/e/dashboard/use/tables"
                            data-refLink="{{table_id}}"
                            type="button" data-toggle="modal" data-target="#use-table-modal"
                            data-crl="use-table" class="btn btn-success waves-effect waves-light">
                            <i class="mdi mdi-file-table-box-multiple"></i>
                        </button>
                        <a href="{{../page.URL}}/f/a/e/dashboard/use/tables?id=edit&refLink={{table_id}}"
                            data-crl="edit-table" class="btn btn-blue waves-effect waves-light">
                            <i class="mdi mdi-square-edit-outline"></i>
                        </a>
                        <button type="button" value="{{table_id}}" data-crl="removeTable"
                            class="btn btn-danger waves-effect waves-light">
                            <i class="mdi mdi-close"></i>
                        </button>

                    </div>
                </div>

            </div>
        </div>

        {{/each}}

    </div>

</div>

<div id="use-table-modal" class="modal fade" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-body">

                <form method="GET" id="dashboardUseTablesForm">

                    <input type="hidden" name="id" value="use">

                    <input type="hidden" name="refLink">

                    <div class="form-group mb-3">
                        <label for="company-select">Select company</label>
                        <select name="app_id" class="form-control" id="company-select">
                            {{#each simpleComapniesData}}
                                <option value="{{_id}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="form-group text-center">
                        <button class="btn btn-primary" type="submit">
                            Use table
                            <i class="mdi mdi-arrow-collapse-right"></i>
                        </button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>