<div class="col-12 mb-5 order-2">

    <h3>
        Registered Permissions
    </h3>

    <div class="row">
        <div class="col-12">

            <div class="card mb-2">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-inline">
                                <div class="form-group">
                                    <label for="inputFindCompany" class="sr-only">Find by name/mail</label>
                                    <input type="search" class="form-control" data-crl="inputFindCompany" id="inputFindCompany" placeholder="Search...">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="text-sm-right">
                                {{!-- <button type="button" class="btn btn-success waves-effect waves-light mr-1">
                                    <i class="mdi mdi-cog"></i>
                                </button> --}}
                                <button type="button" class="btn btn-danger waves-effect waves-light"
                                    data-toggle="modal" data-target="#custom-modal" data-crl="deleteAllPermission">
                                    <i class="mdi mdi-trash-can mr-1"></i>
                                    Delete all selected
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{#each preloginData}}

            <div class="card-box mb-2" data-crl-filters="{{name}} {{email}}">
                <div class="row align-items-center">
                    <div class="col-sm-4">
                        <div class="media">
                            <img class="d-flex align-self-center mr-3 rounded-circle bg-dark"
                                src="/dash/assets/images/crlcoin_logo.svg" alt="Generic placeholder image" height="64">
                            <div class="media-body">
                                <h4 class="mt-0 mb-2 font-16">
                                    {{name}}
                                </h4>
                                <p class="mb-1">
                                    <b>Contact/Login:</b> {{email}}
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-2">
                        <div class="text-center my-3 my-sm-0">
                            <p class="mb-0 text-muted">
                                {{#formatDate createdAt}}{{response}}{{/formatDate}}
                            </p>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <div class="text-center button-list">
                            <button data-crl="copyLinkPermission" title="Copy link for first access"
                                value="?refLink={{permission}}"
                                class="btn btn-xs btn-primary waves-effect waves-light">
                                <i class="fas fa-link"></i>&nbsp;
                                Copy Link
                            </button>
                        </div>
                    </div>

                    <div class="col-sm-2">
                        <div class="text-sm-right text-center mt-2 mt-sm-0">
                            <div class="custom-control custom-switch">
                                <input class="custom-control-input" type="checkbox" id="random{{_id}}"
                                    data-crl="actionSelectbox" value="{{permission}}">
                                <label class="custom-control-label" for="random{{_id}}">
                                </label>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            {{/each}}

        </div>
    </div>

</div>


