    <script src="/page/libs/sweetalert2/sweetalert2.all.min.js"></script>

    {{!-- <!-- custom js --> --}}
    <script src="/page/js/app.js"></script>
    <script src="/page/js/notification.js"></script>
    <script src="/page/js/contact.js"></script>
    <script src="/page/js/words.js"></script>
    <script src="/page/js/translate.js"></script>

</body>
</html>