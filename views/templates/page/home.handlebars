    {{!-- reCAPTCHA --}}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

</head>

<body>

    <nav class="navbar navbar-expand-lg fixed-top navbar-custom sticky sticky-dark">
        <div class="container-fluid">

            <a class="logo text-uppercase" href="#">
                <img src="/page/images/crlcoin_logo.svg" alt="Logo" class="logo-light" height="70" />
                <img src="/page/images/crlcoin_logo.svg" alt="Logo" class="logo-dark" height="70" />
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <i class="mdi mdi-menu text-light"></i>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarCollapse">
                <ul class="navbar-nav" id="mySidenav" data-translate-block="navigation">
                    <li class="nav-item">
                        <div class="btn-group mb-2">
                            <button class="btn translate" value="en">
                                <img src="/page/images/flags/us.jpg" height="14" alt="Flag">
                            </button>
                            <button class="btn translate" value= "es">
                                <img src="/page/images/flags/es.png" height="14" alt="Flag">
                            </button>
                            <button class="btn translate" value="pt-BR">
                                <img src="/page/images/flags/pt-br.png" height="14" alt="Flag">
                            </button>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a href="/login" data-translate-part="login" class="btn text-light text-capitalize">
                            Login
                        </a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>

    <section class="bg-home" id="home">
        <div class="home-center">
            <div class="home-desc-center">
                <div class="container-fluid">

                    <div class="row align-items-center justify-content-center">

                        <div class="col-12 text-center pb-5">
                            <div class="position-relative">
                                <img src="/page/images/crlcoin_logo.svg" class="crlcoin-principal-logo" alt="crlcoin logo"><br>
                                <h1 class="crlcoin-font crlcoin-title-h1">CRLcoin</h1>
                                <h3 class="crlcoin-font crlcoin-title-h2">TECHNOLOGY GROUP</h3>
                            </div>
                        </div>

                        <div class="col-12 col-md-10 col-lg-6 pt-5 text-center">
                            <div class="home-title mo-mb-20 text-center">
                                <span data-translate-block="block_1">
                                    <h1 class="crlcoin-font crlcoin-title mb-4 text-white" data-translate-part="title">
                                        TO THE MOON and beyond
                                    </h1>
                                    <p class="text-white-50 mb-2" data-translate-part="paragraph">
                                        We are a group specialized in the information technology ecosystem
                                        with solutions and investments for your business.
                                    </p>
                                </span>

                                <img src="/page/images/other_logos/bull.svg" width="70" alt="Bull">

                                <span data-translate-block="block_2">
                                    <h1 class="crlcoin-font crlcoin-title mb-4 text-white" data-translate-part="title">
                                        be bull always
                                    </h1>
                                    <p class="text-white-50 mb-5" data-translate-part="paragraph">
                                        Avoid lost-to-concurrence users<br />
                                        Increase performance<br />
                                        Reduce expenses<br />
                                        Promote your market share<br />
                                        Increase profits<br />
                                    </p>
                                </span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container-fluid">
            <div class="clients p-4 bg-white shadow">
                <div class="row d-flex-between align-items-center justify-content-center">
                    <div class="col-12 text-center" data-translate-block="block_3">
                        <p class="crlcoin-font crlcoin-title" data-translate-part="title">our investments</p>
                    </div>
                    <div class="col-6 col-md-2">
                        <div class="client-images">
                            <img src="/page/images/other_logos/zerooneusability.svg" alt="logo-img" class="mx-auto img-fluid d-block px-2">
                        </div>
                    </div>
                    <div class="col-6 col-md-2">
                        <div class="client-images">
                            <img src="/page/images/other_logos/QA.svg" alt="logo-img" class="mx-auto img-fluid d-block px-2">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section pb-5" id="contact" data-translate-block="block_4">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="title text-center mb-4">
                        <h3 class="crlcoin-font crlcoin-title-h2 text-primary" data-translate-part="title">CONTACT</h3>
                        <p class="text-primary-50" data-translate-part="paragraph">Please fill out the following form and we will get back to you shortly</p>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-10">

                    <div class="custom-form p-5 bg-white">
                        <div id="message"></div>
                        <form method="post" action="contact" id="contact-form">

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group" data-translate-form-part="name">
                                        <label for="name" data-translate-form-label>Name</label>
                                        <input name="name" data-translate-form-input id="name" type="text" required="true" class="form-control" placeholder="Enter your name...">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group" data-translate-form-part="email">
                                        <label for="emailaddress" data-translate-form-label>Email address</label>
                                        <input name="emailaddress" data-translate-form-input id="emailaddress" type="email" required="true" class="form-control" placeholder="Enter your email...">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group" data-translate-form-part="subject">
                                        <label for="subject" data-translate-form-label>Subject</label>
                                        <input name="subject" data-translate-form-input id="subject" type="text" class="form-control" required="true" placeholder="Enter Subject...">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group" data-translate-form-part="phone">
                                        <label for="phoneNumber" data-translate-form-label>Phone</label>
                                        <input name="phoneNumber" data-translate-form-input id="phone-number" type="number" class="form-control" placeholder="Enter Phone number...">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group" data-translate-form-part="message">
                                        <label for="sdncomments" data-translate-form-label>Message</label>
                                        <textarea name="comments" data-translate-form-input id="comments" rows="4" class="form-control" required="true" placeholder="Enter your message..."></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-2">
                                <div class="g-recaptcha" data-sitekey="6LfQaSocAAAAAIIwrj6dHHeqVhCXX1JO0rAAwNZu"></div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12 text-right" data-translate-form-part="submit">
                                    <button type="submit" id="submit" data-translate-form-label class="submitBnt btn btn-success">
                                        Send
                                    </button>
                                    <div id="simple-msg"></div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="bg-dark footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-md-6">
                    <div class="pull-none">
                        <p class="text-white-50">
                            {{>_copyright}}
                        </p>
                    </div>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <div class="pull-none">
                        <ul class="list-inline social-links">
                            <li class="list-inline-item text-white-50">
                                Social :
                            </li>
                            <li class="list-inline-item"><a href="#"><i class="mdi mdi-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

