    {{!-- <!-- Custom  sCss --> --}}
    <link rel="stylesheet" type="text/css" href="/page/css/style.min.css" />

</head>

<body>

    <nav class="navbar navbar-expand-lg fixed-top navbar-custom sticky sticky-dark">
        <div class="container-fluid">

            <a class="logo text-uppercase" href="#">
                <img src="/page/images/crlcoin_logo.svg" alt="Logo" class="logo-light" height="70" />
                <img src="/page/images/crlcoin_logo.svg" alt="Logo" class="logo-dark" height="70" />
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <i class="mdi mdi-menu text-light"></i>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarCollapse">
                <ul class="navbar-nav" id="mySidenav">
                    <li class="nav-item">
                        <a href="#home" class="btn text-light">
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#contact" class="btn text-light">
                            Contact
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/login" class="btn text-light">
                            Login
                        </a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>

    <section class="bg-home" id="home">
        <div class="home-center">
            <div class="home-desc-center">
                <div class="container-fluid">

                    <div class="row align-items-center justify-content-center">

                        <div class="col-12 text-center pb-5">
                            <div class="position-relative">
                                <img src="/page/images/crlcoin_logo.svg" class="crlcoin-principal-logo" alt="crlcoin logo"><br>
                                <h1 class="crlcoin-font crlcoin-title-h1">CRLcoin</h1>
                                <h3 class="crlcoin-font crlcoin-title-h2">TECHNOLOGY GROUP</h3>
                            </div>
                        </div>

                        <div class="col-12 col-md-10 col-lg-6 pt-5 text-center">
                            <div class="home-title mo-mb-20 text-center">
                                <h1 class="crlcoin-font crlcoin-title mb-4 text-white">TO THE MOON and beyond</h1>
                                <p class="text-white-50 mb-2">
                                    We are a group specialized in the information technology ecosystem
                                    with solutions and investments for your business.
                                </p>
                                <img src="/page/images/other_logos/bull.svg" width="70" alt="Bull">
                                <h1 class="crlcoin-font crlcoin-title mb-4 text-white">be bull always</h1>
                                <p class="text-white-50 mb-5">
                                    Avoid lost-to-concurrence users<br />
                                    Increase performance<br />
                                    Reduce expenses<br />
                                    Promote your market share<br />
                                    Increase profits<br />
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container-fluid">
            <div class="clients p-4 bg-white shadow">
                <div class="row d-flex-between align-items-center justify-content-center">
                    <div class="col-12 text-center">
                        <p class="crlcoin-font crlcoin-title">our investments</p>
                    </div>
                    <div class="col-6 col-md-2">
                        <div class="client-images">
                            <img src="/page/images/other_logos/zerooneusability.svg" alt="logo-img" class="mx-auto img-fluid d-block px-2">
                        </div>
                    </div>
                    <div class="col-6 col-md-2">
                        <div class="client-images">
                            <img src="/page/images/other_logos/QA.svg" alt="logo-img" class="mx-auto img-fluid d-block px-2">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section pb-5" id="contact">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="title text-center mb-4">
                        <h3 class="crlcoin-font crlcoin-title-h2 text-primary">CONTACT</h3>
                        <p class="text-primary-50">Please fill out the following form and we will get back to you shortly</p>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-10">

                    <div class="custom-form p-5 bg-white">
                        <div id="message"></div>
                        <form method="post" action="contact" name="contact-form" id="contact-form">

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="name">Name</label>
                                        <input name="name" id="name" type="text" class="form-control" placeholder="Enter your name...">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="emailaddress">Email address</label>
                                        <input name="emailaddress" id="emailaddress" type="email" class="form-control" placeholder="Enter your email...">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="subject">Subject</label>
                                        <input name="subject" id="subject" type="text" class="form-control" placeholder="Enter Subject...">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="phone-number">Phone</label>
                                        <input name="phone-number" id="phone-number" type="number" class="form-control" placeholder="Enter Phone number...">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="comments">Message</label>
                                        <textarea name="comments" id="comments" rows="4" class="form-control" placeholder="Enter your message..."></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12 text-right">
                                    <input type="submit" id="submit" name="send" class="submitBnt btn btn-danger" value="Send Message">
                                    <div id="simple-msg"></div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="bg-dark footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-md-6">
                    <div class="pull-none">
                        <p class="text-white-50">
                            {{>_copyright}}
                        </p>
                    </div>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <div class="pull-none">
                        <ul class="list-inline social-links">
                            <li class="list-inline-item text-white-50">
                                Social :
                            </li>
                            <li class="list-inline-item"><a href="#"><i class="mdi mdi-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    {{!-- <!-- Back to top --> --}}
    <a href="#" class="back-to-top" id="back-to-top"> <i class="mdi mdi-chevron-up"> </i> </a>

    {{!-- <!-- javascript --> --}}
    <script src="/page/js/jquery.min.js"></script>
    <script src="/page/js/bootstrap.bundle.min.js"></script>
    <script src="/page/js/jquery.easing.min.js"></script>
    <script src="/page/js/scrollspy.min.js"></script>

    {{!-- <!-- custom js --> --}}
    <script src="/page/js/app.js"></script>
</body>

</html>